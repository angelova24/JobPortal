@model JobUserApplication

<div class="row">
    <div class="alert alert-primary mb-3">
        <div class="d-flex justify-content-between">
            <div class="text-lg fw-bold">@Model.Title</div>
            <div class="fst-italic">@Model.CreatedOn.ToString("dd/MM/yy HH:mm")</div>
        </div>
        <div>
            <i class="bi bi-cash-stack"></i>
            @if (Model.Salary == null)
            {
                <span> â€“ EUR</span>
            }
            else
            {
                <span>@($"{Model.Salary:f2}") EUR</span>
            }
        </div>
        <div>
            <i class="bi bi-buildings"></i>
            @Model.CompanyName
        </div>
        <div>
            <i class="bi bi-geo-alt"></i>
            @Model.CompanyAddress
        </div>
        <div class="d-flex justify-content-between">
            <div>
                <a asp-area="" asp-controller="Job" asp-action="Details" asp-route-id="@Model.Id" class="w-auto btn btn-dark mt-1">
                    Details
                </a>
                <form asp-area="" asp-controller="User" asp-action="DeleteApplication" asp-route-id="@Model.Id" class="d-inline-block w-auto">
                    <input type="submit" value="Delete application" class="btn btn-danger mt-1"
                           onclick="return confirm('Are you sure you want to delete your application for: @Model.Title')"/>
                </form>
            </div>
            <div class="fst-italic align-self-end">Applied on: @Model.ApplicationDate.ToString("dd/MM/yy HH:mm")</div>
        </div>
    </div>
</div>