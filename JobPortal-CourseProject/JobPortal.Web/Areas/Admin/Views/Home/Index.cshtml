@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can read, create, delete and edit jobs.
        <br />You can read, create, delete and edit articles, too!
    </p>
    <p class="lead mt-1">
        You can also see all users and employers in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Job" asp-action="All"
       class="btn btn-primary btn-lg">All Jobs</a>
    <a asp-area="" asp-controller="Job" asp-action="Add"
       class="btn btn-primary btn-lg">Add Job</a>
    <a asp-area="" asp-controller="Employer" asp-action="MyJobOffers"
       class="btn btn-primary btn-lg">My Job Offers</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Article" asp-action="All"
       class="btn btn-primary btn-lg">All Articles</a>
    <a asp-area="Admin" asp-controller="Article" asp-action="Add"
       class="btn btn-primary btn-lg">Add Article</a>
    <a asp-area="Admin" asp-controller="Article" asp-action="MyArticles"
       class="btn btn-primary btn-lg">My Articles</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>